<div class="background-grad p-5 m-5">

    <div class="alert alert-primary" role="alert">
        <h3 class="text-center">Lista de Nombre</h3>
    </div>


    <div class="d-grid gap-2">
        <input type="text" @bind="newTodoItem" class="form-control form-control-lg"/>
        <button @onclick="addTodoItem" class="btn btn-primary">Add</button>
    </div>

    <hr />

    <ol class="list-group">
        @foreach (string todoItem in todoList)
        {
            <li class="list-group-item">@todoItem 
                <button @onclick="(()=> eliminarTodoItem(todoItem))" class="btn btn-danger btn-sm float-end">
                    <span class="oi oi-delete"></span>
                </button>
            </li>
        }
    </ol>

</div>

<style type="text/css">
    .background-grad{
        background-color: #0093E9;
        background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
    }
    
</style>

@code {
    List<string> todoList = new List<string> { "Fraylin", "Beto" };
    string newTodoItem = "";
    void addTodoItem()
    {
        if (string.IsNullOrWhiteSpace(newTodoItem) == false)
        {
            todoList.Add(newTodoItem);
            newTodoItem = "";
        }


    }

    void eliminarTodoItem(string todoItemDelete)
    {
        todoList.Remove(todoItemDelete);
    }
}
